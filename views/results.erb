<h2>Search results for '<%= @q %>'</h2>
<ol>
<% if @results.length > 0 %>
  <% @results.each do |result| %>
    <li><a href="/movies?id=<%= URI.escape(result["imdbID"]) %>"><%= result["Title"] %></a> (<%= result["Year"] %>)</li>
  <% end %>
<% else %>
  <h2>Yikes! Nothing found here.</h2>
<% end %>
</ol>